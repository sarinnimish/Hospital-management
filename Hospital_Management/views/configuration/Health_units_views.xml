<?xml version="1.0" encoding="UTF-8"?>
<odoo>
       <!-- Form View -->
    <record id="view_health_center_units_form" model="ir.ui.view">
        <field name="name">health.center.units.form</field>
        <field name="model">health.center.units</field>
        <field name="arch" type="xml">
            <form string="health center units">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="institute"/>
                        
                    </group>
                </group>
            </form>
        </field>
    </record>

        <!-- list view -->
    <record id="view_health_center_units_list" model="ir.ui.view">
        <field name="name">health.center.units.list</field>
        <field name="model">health.center.units</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="institute"/>
            </list>
        </field>
    </record>

        <!-- action view -->
     <record id="action_health_center_units" model="ir.actions.act_window">
        <field name="name">health.center.units</field>
        <field name="res_model">health.center.units</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>