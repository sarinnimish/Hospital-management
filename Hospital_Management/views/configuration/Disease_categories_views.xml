<?xml version="1.0" encoding="UTF-8"?>
<odoo>
       <!-- Form View -->
    <record id="view_disease_categories_form" model="ir.ui.view">
        <field name="name">disease.categories.form</field>
        <field name="model">disease.categories</field>
        <field name="arch" type="xml">
            <form string="Diseases categories">
                <group>
                    <group>
                        <field name="category_name"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

        <!-- list view -->
    <record id="view_disease_categories_list" model="ir.ui.view">
        <field name="name">disease.categories.list</field>
        <field name="model">disease.categories</field>
        <field name="arch" type="xml">
            <list>
                <field name="category_name"/>
            </list>
        </field>
    </record>

        <!-- action view -->
     <record id="action_disease_categories" model="ir.actions.act_window">
        <field name="name">Diseases categories</field>
        <field name="res_model">disease.categories</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>