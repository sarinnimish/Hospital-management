<?xml version="1.0" encoding="UTF-8"?>
<odoo>
       <!-- Form View -->
    <record id="view_hospital_operating_rooms_form" model="ir.ui.view">
        <field name="name">hospital.operating.rooms.form</field>
        <field name="model">hospital.operating.rooms</field>
        <field name="arch" type="xml">
            <form string="Hospital operating Rooms">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="building"/>
                        <field name="unit"/>
                        <field name="institution"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

        <!-- list view -->
    <record id="view_hospital_operating_rooms_list" model="ir.ui.view">
        <field name="name">hospital.operating.rooms.list</field>
        <field name="model">hospital.operating.rooms</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="building"/>
                <field name="unit"/>
                <field name="institution"/>
            </list>
        </field>
    </record>

        <!-- action view -->
     <record id="action_hospital_operating_rooms" model="ir.actions.act_window">
        <field name="name">hospital.operating.rooms</field>
        <field name="res_model">hospital.operating.rooms</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>