<?xml version="1.0" encoding="UTF-8"?>
<odoo>
       <!-- Form View -->
    <record id="view_medicament_misc_form" model="ir.ui.view">
        <field name="name">medicament.misc.form</field>
        <field name="model">medicament.misc</field>
        <field name="arch" type="xml">
            <form string="medicament Misc">
                <group>
                    <group>
                        <field name="name"/>      
                        <field name="active_component"/>   
                        <field name="category_id"/>   
                        <field name="quantity_available"/>   
                        <field name="therapeutic_effect"/>   
                        <field name="pregnancy_warning"/>   
                        <field name="price"/>                  
                    </group>
                </group>
            </form>
        </field>
    </record>

        <!-- list view -->
    <record id="view_medicament_misc_list" model="ir.ui.view">
        <field name="name">medicament.misc.list</field>
        <field name="model">medicament.misc</field>
        <field name="arch" type="xml">
            <list>
                        <field name="name"/>      
                        <field name="active_component"/>   
                        <field name="category_id"/>   
                        <field name="quantity_available"/>   
                        <field name="therapeutic_effect"/>   
                        <field name="pregnancy_warning"/>   
                        <field name="price"/>  
            </list>
        </field>
    </record>

        <!-- action view -->
     <record id="action_medicament_misc" model="ir.actions.act_window">
        <field name="name">medicament.misc</field>
        <field name="res_model">medicament.misc</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>