<?xml version="1.0" encoding="UTF-8"?>
<odoo>
       <!-- Form View -->
    <record id="view_medicament_form_form" model="ir.ui.view">
        <field name="name">medicament.form.form</field>
        <field name="model">medicament.form</field>
        <field name="arch" type="xml">
            <form string="medicament Form">
                <group>
                    <group>
                        <field name="form"/>
                        <field name="code"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

        <!-- list view -->
    <record id="view_medicament_form_list" model="ir.ui.view">
        <field name="name">medicament.form.list</field>
        <field name="model">medicament.form</field>
        <field name="arch" type="xml">
            <list>
                <field name="form"/>
                <field name="code"/>
            </list>
        </field>
    </record>

        <!-- action view -->
     <record id="action_medicament_form" model="ir.actions.act_window">
        <field name="name">medicament.form</field>
        <field name="res_model">medicament.form</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>