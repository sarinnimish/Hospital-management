<?xml version="1.0" encoding="UTF-8"?>
<odoo>
       <!-- Form View -->
    <record id="view_recreational_drugs_form" model="ir.ui.view">
        <field name="name">recreational.drugs.form</field>
        <field name="model">recreational.drugs</field>
        <field name="arch" type="xml">
            <form string="Recreational Drugs">
                <group>
                    <group>
                        <field name="name"/>      
                        <field name="category"/>   
                        <field name="toxicity"/>   
                        <field name="dependance"/>   
                        <field name="street_names"/>                   
                    </group>
                </group>
            </form>
        </field>
    </record>

        <!-- list view -->
    <record id="view_recreational_drugs_list" model="ir.ui.view">
        <field name="name">recreational.drugs.list</field>
        <field name="model">recreational.drugs</field>
        <field name="arch" type="xml">
            <list>
                       <field name="name"/>      
                        <field name="category"/>   
                        <field name="toxicity"/>   
                        <field name="dependance"/>   
                        <field name="street_names"/>   
            </list>
        </field>
    </record>

        <!-- action view -->
     <record id="action_recreational_drugs" model="ir.actions.act_window">
        <field name="name">recreational.drugs</field>
        <field name="res_model">recreational.drugs</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>