<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hospital_bed_transfer_wizard_form" model="ir.ui.view">
        <field name="name">hospital.bed.transfer.wizard.form</field>
        <field name="model">hospital.bed.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Bed Transfer">
                <group>
                    <field name="patient_id" readonly="1"/>
                    <field name="bed_from" readonly="1"/>
                    <field name="bed_to"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="action_confirm_transfer" type="object" string="Transfer" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
